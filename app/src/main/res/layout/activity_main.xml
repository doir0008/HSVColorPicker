<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.algonquincollege.doir0008.hsvcolorpicker.MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/colorSwatch"
        android:height="220dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="14sp" />

    <TextView
        android:text="Hue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/hueText"
        android:textColor="#000000"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="18sp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hueText"
        android:id="@+id/hueSB"
        android:layout_alignParentStart="true"
        android:background="@drawable/huesbbg"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:max="360"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Saturation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hueSB"
        android:layout_alignStart="@+id/hueText"
        android:layout_marginTop="12dp"
        android:id="@+id/saturationText"
        android:textColor="#000000"
        android:layout_alignParentEnd="true"
        android:textSize="18sp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saturationText"
        android:id="@+id/saturationSB"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/saturationsbbg"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:max="100" />

    <TextView
        android:text="Value / Lightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saturationSB"
        android:layout_alignStart="@+id/saturationText"
        android:layout_marginTop="12dp"
        android:id="@+id/valueText"
        android:textColor="#000000"
        android:layout_alignParentEnd="true"
        android:textSize="18sp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valueText"
        android:id="@+id/valueSB"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/valuesbbg"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:max="100" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/valueSB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/buttonGroup1"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blackButton"
                android:background="#000000"
                android:minWidth="48dip" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/redButton"
                android:background="#FF0000"
                android:minWidth="48dip"
                android:layout_marginLeft="5dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/limeButton"
                android:layout_weight="1"
                android:minWidth="48dip"
                android:background="#00FF00"
                android:layout_marginLeft="5dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blueButton"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="#0000FF"
                android:minWidth="48dip" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yellowButton"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="#FFFF00"
                android:minWidth="48dip" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cyanButton"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="#00FFFF"
                android:minWidth="48dip" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/magentaButton"
                android:layout_weight="1"
                android:minWidth="48dip"
                android:layout_marginLeft="5dp"
                android:background="#FF00FF" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/silverButton"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="#C0C0C0"
                android:minWidth="48dip" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/grayButton"
                android:layout_weight="1"
                android:minWidth="48dip"
                android:layout_marginLeft="5dp"
                android:background="#808080" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/maroonButton"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="#800000"
                android:minWidth="48dip" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/oliveButton"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="#808000"
                android:minWidth="48dip" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/greenButton"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="#008000"
                android:minWidth="48dip" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/purpleButton"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="#800080"
                android:minWidth="48dip" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tealButton"
                android:layout_weight="1"
                android:background="#008080"
                android:minWidth="48dip"
                android:layout_marginLeft="5dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/navyButton"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="#000080"
                android:minWidth="48dip" />

        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>
